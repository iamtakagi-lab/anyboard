datasource db {
  provider = "sqlite"
  url      = "file:../db/sqlite.db"
}

generator client {
  provider = "prisma-client-js"
}

model Anonymity {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  ipAddress   String
  userAgent String
}

model Post {
  id       Int      @id @default(autoincrement())
  postedAt DateTime @default(now())
  text  String
  authorId Int
  replyTo String
}